@model ResetPasswordViewModel
@{
    ViewData["Title"] = "تغيير كلمة المرور";
}

<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner py-4 d-flex align-items-center justify-content-center">
            <!-- Register -->
            <div class="card" style="width:400px !important;">
                <div class="card-body">
                    <!-- Logo -->
                    <div class="container">
                        <img src="~/assets/img/favicon/crm.png" style="width:100% !important; height:100%;" alt="" />
                    </div>
                    <div class="app-brand justify-content-center">
                        <span class="app-brand-text demo h3 fw-bold mb-0">@SystemInfoResource.SystemName</span>
                    </div>
                    <h2>@FormResources.ResetPassword</h2>
                    <p>@FormResources.Text</p>
                    <!-- /Logo -->
                    <form id="formAuthentication" class="mb-3" action="/Account/ResetPassword" method="post">
                        <input name="email" type="hidden" value="@Model.Email" />
                        <input name="token" type="hidden" value="@Model.Token" />
                        <div class="mb-3">
                            <label class="form-label">@FormResources.Password</label>
                            <input type="password" class="form-control" id="email" asp-for="Password" name="password"
                                placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                                autofocus />
                            <small class="text-danger" asp-validation-for="Password"></small>
                        </div>
                        <div class="form-password-toggle mb-3">
                            <div class="d-flex justify-content-between">
                                <label class="form-label" for="ConfirmPassword">@FormResources.Password</label>
                            </div>
                            <div class="input-group input-group-merge">
                                <input type="password" id="ConfirmPassword" class="form-control" name="ConfirmPassword"
                                    asp-for="ConfirmPassword"
                                    placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                                    aria-describedby="password" />
                                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                            </div>
                            <small class="text-danger" asp-validation-for="Password"></small>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-primary d-grid w-100" type="submit">@FormResources.Confirm</button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /Register -->
        </div>
    </div>
</div>